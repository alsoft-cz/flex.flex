----------------------------------------------------------------------------------------------------
procedure rtl_is_ancestor =
-- Checks whether A is an ancestor of B (A < B).
----------------------------------------------------------------------------------------------------
var
  BB               : t_rtl_tag;

begin
  BB:=B;
  while BB<>nil loop
    BB:=p_desc_entity(BB:unchecked)^.ancestor_tag;
    if A=BB then 
      break;
      end if;
    end loop;
  result:=BB<>nil;
  end rtl_is_ancestor;



----------------------------------------------------------------------------------------------------
procedure rtl_is_ancestor_or_equal =
-- Checks whether A is an ancestor of B or they are equal (A <= B).
----------------------------------------------------------------------------------------------------
var
  BB               : t_rtl_tag;

begin
  BB:=B;
  while BB<>nil and then A<>BB loop
    BB:=p_desc_entity(BB:unchecked)^.ancestor_tag;
    end loop;
  result:=BB<>nil;
  end rtl_is_ancestor_or_equal;



----------------------------------------------------------------------------------------------------
procedure rtl_is_descendant =
-- Checks whether A is a descendant of B (A > B).
----------------------------------------------------------------------------------------------------
var
  AA               : t_rtl_tag;

begin
  AA:=A;
  while AA<>nil loop
    AA:=p_desc_entity(AA:unchecked)^.ancestor_tag;
    if AA=B then 
      break;
      end if;
    end loop;
  result:=AA<>nil;
  end rtl_is_descendant;



----------------------------------------------------------------------------------------------------
procedure rtl_is_descendant_or_equal =
-- Checks whether A is a descendant of B or they are equal (A >= B).
----------------------------------------------------------------------------------------------------
var
  AA               : t_rtl_tag;

begin
  AA:=A;
  while AA<>nil and then AA<>B loop
    AA:=p_desc_entity(AA:unchecked)^.ancestor_tag;
    end loop;
  result:=AA<>nil;
  end rtl_is_descendant_or_equal;



