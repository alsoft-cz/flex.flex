type
  -- memory error code
  t_rtl_mem_error_code = enum
      rmec_ok;                                   -- ok
      rmec_invalid;                              -- pointer out of allocated memory
      rmec_multiple;                             -- block is already free
      rmec_bad;                                  -- corrupted block
      rmec_bad_size;                             -- invalid block size
      rmec_corrupt;                              -- corrupted heap
      end enum;

