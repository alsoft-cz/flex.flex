----------------------------------------------------------------------------------------------------
program test_tasks =
-- Šílený testovací program na taskové proměnné. Nehledejte v tom žádný řád, prostě se tu zkouší
-- co největší šílenosti, jestli fungují.
----------------------------------------------------------------------------------------------------

with
  standard,
  standard.conversions,
  standard.console,
  standard.tasks,
  system.windows.winbase,
  test_tasks_module;

var
  globalni: task t_cislo := 33;
  c: t_cislo;

procedure proc =
var
  lokalni: task t_cislo {:= 777};

begin
  modul_proc;
  vypis('lokalni=',lokalni);
  succ lokalni;
  vypis('a ted, lokalni=',lokalni);
  modul_proc;
  end proc;

var
  inst:  task aliased c_trida;

class c_muj_task = extend c_task;

  var
    ve_tride: task t_cislo {:= 55};

  override run =
  begin
    vypis('--task--',c);
    vypis('globalni=',globalni);
    succ globalni;
    vypis('a ted, globalni=',globalni);
    proc;
    modul_proc;
    vypis('ve_tride=',ve_tride);
    succ ve_tride;
    vypis('a ted, ve_tride=',ve_tride);
    proc;
    modul_proc;
    inst.proc;
    end run;

  end c_muj_task;

type
  p_muj_task=^class c_muj_task;

var
  task1: p_muj_task;
  task2: p_muj_task;
  i:     ^class c_trida;

begin
  vypis('globalni=',globalni);
  succ globalni;
  new task1;
  task1^.start;
  Sleep(0);
  proc;
  vypis('globalni=',globalni);
  succ globalni;
  new task2;
  task2^.start;
  Sleep(0);
  proc;
  i:=^inst;
  vypis('globalni=',globalni);
  succ globalni;
  inst.proc;
  i^.proc;
  end test_tasks;
