program aggregate_test02 =

with
  standard,
  standard.console;

type
  test_string = string 40 of character 8;

const
  a = '3';
  b = '9';
  x = '4.0.' & a & b;

var
  y : test_string := 'test ';
  z : test_string := x;
  s : t_char32str := '';

begin
  for i in y:range loop
    s & t_char32(y[i]);
    end loop;
  write_line(s);

  y & z;
  s:='';
  for i in y:range loop
    s & t_char32(y[i]);
    end loop;
  write_line(s);
  end aggregate_test02;