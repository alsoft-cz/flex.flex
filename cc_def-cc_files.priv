class private c_used_file = 
-- Jm‚no pou‘it‚ho souboru.
----------------------------------------------------------------------------------------------------

    ------------------------------------------------------------------------------------------------
    static init =
    -- Inicializace - p©i©azen¡ jm‚na souboru.
    ------------------------------------------------------------------------------------------------
    begin
      new this.name range name:length;
      this.name^:=name;
      end init;

    end c_used_file;



