procedure blocktypeset_to_string (
    value          : in blocktypeset)            -- p©ev dˆn  mno‘ina
    return t_char32str =
-- P©evod mno‘iny na ©etˆzec
----------------------------------------------------------------------------------------------------
begin
  -- zpracovat v¨echny hodnoty v˜‡tov‚ho typu blocktype
  for bt in blocktype loop
    -- pokud je pr vˆ zpracov van  hodnota obsa‘ena v mno‘inˆ, zapsat ji do v˜sledku
    if bt in value then
      result & blocktype_export_id[bt] & ' ';
      end if;
    end loop;
  end blocktypeset_to_string;



