----------------------------------------------------------------------------------------------------
procedure dump (name : in t_char32str; list : in tentitystring) =
----------------------------------------------------------------------------------------------------
with
  standard.console,
  cc_base,cc_base.cc_sym;

begin
  write_line('');
  write_line(name);
  if list.list<>nil then
    for i in list.list^:range loop
      write_line(sym_get_qid(list.list^[i]));
      end loop;
    end if;
  end dump;



