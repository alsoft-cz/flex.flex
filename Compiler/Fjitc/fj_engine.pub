class public c_flex_jit_engine = extend c_flex_compiler;
-- Flex Just-in-Time Engine.
----------------------------------------------------------------------------------------------------

    ------------------------------------------------------------------------------------------------
    static jit_initialize (
        os         : in c_text_writer);          -- výstupní stream pro zápis případných chyb
    -- Inicializuje JIT stroj.
    ------------------------------------------------------------------------------------------------
    static jit_execute (
        os         : in c_text_writer;           -- výstupní stream pro zápis případných chyb
        config     : in c_compilation_config;    -- konfigurace překladu
        part_type  : in t_partition_type);       -- typ překládané partition
    -- Spustí zadanou kompilační jednotku. Pokud nenajde přeložený modul, JIT-zkompiluje ho.
    ------------------------------------------------------------------------------------------------
    static jit_finalize (
        os         : in c_text_writer);          -- výstupní stream pro zápis případných chyb
