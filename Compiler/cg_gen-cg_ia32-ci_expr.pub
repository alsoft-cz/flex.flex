    expr           : in pexpnode);               -- strom
-- Načte kód zprávy do EAX.
----------------------------------------------------------------------------------------------------
procedure i_load_expr (
    inst           : in out icodeinst;           -- instance
    info           : in out igeninfo;            -- informace o průběhu generování
