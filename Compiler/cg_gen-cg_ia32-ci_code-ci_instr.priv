    -- %%X Omezit jen na registry skuteánà pouëitÇ ve volanÇ procedu©e
    i_reg_save_used(inst,info,context);
    end if;

  -- zavolat intern° proceduru
  rtl_get_entity(rtl,pentity(pproc));
  addcall(inst,info,context,pproc);
  end addcallrtl;



