----------------------------------------------------------------------------------------------------
procedure addsubimm =
-- P©id† SUB <op>,<value>.
----------------------------------------------------------------------------------------------------
begin
  -- ne®la by nàjak† optimalizace ?
  if value=1

    -- ®la, DEC
    then addii(inst,info,ii_dec,op,op0,op0)

    -- ne®la, mus°me SUB
    else addopimm(inst,info,context,ii_sub,op,value);
    end if;
  end addsubimm;



----------------------------------------------------------------------------------------------------
procedure addaddimm =
-- P©id† ADD <op>,<value>.
-- Pokud je VALUE=1, pouëije se instrukce INC.
----------------------------------------------------------------------------------------------------
begin
  -- ne®la by nàjak† optimalizace ?
  if value=1

    -- ®la, INC
    then addii(inst,info,ii_inc,op,op0,op0)

    -- ne®la, mus°me SUB
    else addopimm(inst,info,context,ii_add,op,value);
    end if;
  end addaddimm;



