-- (adresa se do c°lovÇho pole PûIÄTE)
----------------------------------------------------------------------------------------------------
begin
  -- %%TODO(SLICE)
  t_mod_unsigned32(p_unsigned32(^inst.c^[disp+1]:unchecked)^)+t_mod_unsigned32(value);
  end setfield;


