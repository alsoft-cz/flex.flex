module private cc_syntax =
-- P©eklada‡ Flexu.
-- Definice syntaktick˜ch pravidel, zotaven¡ ze syntaktick˜ch chyb.
----------------------------------------------------------------------------------------------------
-- Ondra : 25.7.2003 : Vytvo©il
----------------------------------------------------------------------------------------------------

----------------------------------------------------------------------------------------------------
class private abstract c_syntax_rule =
-- Syntaktick‚ pravidlo.
----------------------------------------------------------------------------------------------------
   
    var
      context      : tcontext;
   
    ------------------------------------------------------------------------------------------------
    static bind =
    -- P©ipoj¡ novˆ vznikl‚ syntaktick‚ pravidlo k ur‡it‚mu kontextu.
    ------------------------------------------------------------------------------------------------
    begin
      this.context:=context;
      end bind;



    ------------------------------------------------------------------------------------------------
    rollback =
    -- Zotaven¡ ze syntaktick‚ chyby.
    ------------------------------------------------------------------------------------------------
    with
      cc_lex;

    var
      lex          : lexsym;

    begin
      -- pokud nebyl p©i©azen kontext, nem–‘eme nic dˆlat
      if context=nil then return end if;

      -- naj¡t prvn¡ lexik ln¡ element, kter˜ ji‘ jistˆ nen¡ sou‡ st¡ tohoto syntaktick‚ho pravidla
      loop
        getlex(context,lex);
        until lex=lex_eof or lex in terminate;
      
      -- posledn¡ nalezen˜ lexik ln¡ element, kter˜ ji‘ nepat©¡ n m, vr tit zpˆt do vstupu
      ungetlex;
      end rollback;

    end c_syntax_rule;



----------------------------------------------------------------------------------------------------
#template finish_syntax_rule (rule, terminate_set);
-- Dokon‡¡ deklaraci syntaktick‚ho pravidla.
----------------------------------------------------------------------------------------------------

  --------------------------------------------------------------------------------------------------
  class private rule = 
  --------------------------------------------------------------------------------------------------

      ----------------------------------------------------------------------------------------------
      entry =
      ----------------------------------------------------------------------------------------------
      begin
        terminate:=terminate_set;
        end entry;

      end rule

  #end finish_syntax_rule;



----------------------------------------------------------------------------------------------------
finish_syntax_rule(c_sr_expression,[lex_scol,lex_else,lex_end,lex_when]);
----------------------------------------------------------------------------------------------------

end cc_syntax;