----------------------------------------------------------------------------------------------------
static setmsg =
-- Vytvo©¡ z znam o zpr vˆ.
----------------------------------------------------------------------------------------------------
var
  msg              : pmsgdesc_message;

begin
  -- zalo‘it a vyplnit z znam pro chybu
  new msg;
  new msg^.msg range _msg:length;
  msg^.typ:=mt_message;
  msg^.num:=_num;
  msg^.msg^:=_msg;

  -- za©adit do seznamu
  list_insert_last(msglist,msg);

  -- zprava je zobrazena kazdopadne
  msg_set:=true;
  end setmsg;



----------------------------------------------------------------------------------------------------
static setparam =
-- Do posledniho hlaseni dosadi doplnkovy text
----------------------------------------------------------------------------------------------------
var
  msg              : pmsgdesc_extended;

begin
  -- odejdi, pokud zaznam nebyl zobrazen
  if not msg_set then
    return;
    end if;

  -- z¡skat pointer na posledn¡ z znam
  list_set_last(msglist,p_list_item(msg));

  -- doplnit parametr
  new msg^.param range _param:length;
  msg^.param^:=_param;
  end setparam;



----------------------------------------------------------------------------------------------------
