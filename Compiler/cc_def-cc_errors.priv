class private cc_errors =
-- P©eklada‡ Flexu.
-- Chybov  hl ¨en¡.
----------------------------------------------------------------------------------------------------

with
  advanced,
  advanced.low_level,
  advanced.low_level.bit_operations,
  cc_lex;

var
  errors_set       : t_logical;                  -- T-byly hl ¨eny nˆjak‚ chyby
  msg_set          : t_logical;                  -- T-byla zobrazena chyba, hl ¨en¡, hint apod.?

----------------------------------------------------------------------------------------------------
static seterror =
-- Vytvo©¡ z znam o chybˆ.
----------------------------------------------------------------------------------------------------
var
  msg              : pmsgdesc_error;

begin
  -- zalo‘it a vyplnit z znam pro chybu
  new msg;
  msg^.typ:=mt_error;
  msg^.num:=_num;
  msg^.error_code:=_code;

  -- za©adit do seznamu
  list_insert_last(msglist,msg);

  -- poznamenat, ‘e byly hl ¨eny nˆjak‚ chyby
  errors_set:=true;

  -- chyba je zobrazena kazdopadne
  msg_set:=true;
  end seterror;



----------------------------------------------------------------------------------------------------
static setwarning =
-- Vytvo©¡ z znam o varov n¡.
----------------------------------------------------------------------------------------------------
var
  msg              : pmsgdesc_warning;

begin
  -- zjistit, je-li warning zapnut˜
  msg_set:=_code in context.entity^.compv.warns;
  if msg_set then
    -- zalo‘it a vyplnit z znam pro warning
    new msg;
    msg^.typ:=mt_warning;
    msg^.num:=_num;
    msg^.warn_code:=_code;

    -- za©adit do seznamu
    list_insert_last(msglist,msg);
    end if;
  end setwarning;


