static loadpos =
-- Dopln¡ pozici posledn¡ho hl ¨en¡ podle posledn¡ho symbolu.
----------------------------------------------------------------------------------------------------
var
  msg              : pmsgdesc;

begin
  -- odejdi, pokud zaznam nebyl zobrazen
  if not msg_set then
    return;
    end if;

  -- z¡skat pointer na posledn¡ z znam
  list_set_last(msglist,p_list_item(msg));

  -- doplnit pozici
  getlexposall(msg^.pos,ll_curr);
  end loadpos;



----------------------------------------------------------------------------------------------------
