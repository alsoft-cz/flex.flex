----------------------------------------------------------------------------------------------------
class private typeview =
-- Pohled na typ
----------------------------------------------------------------------------------------------------

    var
      _tview       : ttypeview;                  -- typ pohledu
      ptyp         : pentity_type;                   -- typ
    --_tag         : typetaginfo;                -- typov  informace
    --bounds       : tboundstype;                -- typ rozsahu

    ------------------------------------------------------------------------------------------------
    static init =
    -- Sestav¡ pohled na zadan˜ typ.
    ------------------------------------------------------------------------------------------------
    begin
      -- z kladn¡ £daje
      ptyp:=_ptyp;
    --_tag:=tag_static;
    --bounds:=tbs_static;

      -- zjistit typ pohledu
      _tview:=t_gettypeview(_context,_ptyp);
      end init;



    ------------------------------------------------------------------------------------------------
    static initunchecked =
    -- Sestav¡ Unchecked view na zadan˜ typ.
    ------------------------------------------------------------------------------------------------
    begin
      -- z kladn¡ £daje
      ptyp:=_ptyp;

      -- typ pohledu je Unchecked view
      _tview:=tview_unchecked;
      end initunchecked;



    ------------------------------------------------------------------------------------------------
    static initfull =
    -- Sestav¡ Full view na zadan˜ typ (pokud to lze, tj. jen v p©¡padˆ, ‘e
    -- by to standardnˆ bylo Partial view).
    ------------------------------------------------------------------------------------------------
    begin
      -- z kladn¡ £daje
      ptyp:=_ptyp;
    --_tag:=tag_static;
    --bounds:=tbs_static;

      -- zjistit typ pohledu
      _tview:=t_gettypefullview(_ptyp);
      end initfull;



    ------------------------------------------------------------------------------------------------
    static initaggregate =
    -- Sestav¡ pohled na libovoln˜ agreg tn¡ typ.
    ------------------------------------------------------------------------------------------------
    begin
      -- z kladn¡ £daje
      ptyp:=nil;

      -- typ pohled je agreg t
      _tview:=tview_aggregate;
      end initaggregate;



    ------------------------------------------------------------------------------------------------
    static tview =
    -- Typ pohledu.
    ------------------------------------------------------------------------------------------------
    begin
      result:=_tview;
      end tview;



    ------------------------------------------------------------------------------------------------
    static stype =
    -- Datov˜ typ.
    ------------------------------------------------------------------------------------------------
    begin
      verify(175,not isclass and ((ptyp=nil) or (_tview<>tview_full)));
      result:=ptyp^.stype;
      end stype;



    ------------------------------------------------------------------------------------------------
    static isclass =
    -- True, je-li typ t©¡da.
    ------------------------------------------------------------------------------------------------
    begin
      {verify(463,ptyp=nil);}
      result:=(ptyp<>nil) and (_tview in ttypeviewset:[tview_full,tview_incomplete]) and (ptyp^.stype=dt_class);
      end isclass;



    ------------------------------------------------------------------------------------------------
    static compat =
    -- Determinace kompatibility.
    ------------------------------------------------------------------------------------------------
    begin
      verify(176,(_tview<>tview_full) or (ptyp=nil));
      result:=ptyp^.compat;
      end compat;



    ------------------------------------------------------------------------------------------------
    static evaluated =
    -- —rove¤ vyhodnocen¡ typu.
    ------------------------------------------------------------------------------------------------
    begin
      verify(181,ptyp=nil);
      result:=ptyp^.evaluated;
      end evaluated;



    ------------------------------------------------------------------------------------------------
    static tagged =
    -- True, je-li typ tagged.
    ------------------------------------------------------------------------------------------------
    begin
      verify(181,ptyp=nil);
      result:=tf_tagged in ptyp^.tflags;
      end tagged;



    ------------------------------------------------------------------------------------------------
    static getutype =
    -- Typ (v‡etnˆ NIL).
    ------------------------------------------------------------------------------------------------
    begin
      result:=ptyp;
      end getutype;



    ------------------------------------------------------------------------------------------------
    static getctype =
    -- Typ (NIL => internal_error).
    ------------------------------------------------------------------------------------------------
    begin
      verify(263,ptyp=nil);
      result:=ptyp;
      end getctype;



    ------------------------------------------------------------------------------------------------
    static getancestor =
    -- P©edek typu.
    ------------------------------------------------------------------------------------------------
    var
      p                : pentity_type;

    begin
      --verify(177,not isclass and ((ptyp=nil) or (_tview<>tview_full)));
      --result.init(_context,pentity_type(ptyp^.ancestor.getuentity));

      verify(177,not isclass and (_tview not in ttypeviewset:[tview_partial,tview_full] or ptyp=nil));

      -- jak jsme na tom s viditelnost¡ p©edka
      if _tview=tview_partial and ptyp^.derive<>td_private_extension

        -- u Partial view na typ, nen¡ s v˜jimvou Private extension p©edek viditeln˜
        then result.init(_context,nil)

        -- u Full view a Partial view s Private extension je p©edek norm lnˆ viditeln˜
        else result.init(_context,pentity_type(ptyp^.ancestor.getuentity));
        end if;

      end getancestor;



    ------------------------------------------------------------------------------------------------
    static getbase =
    -- Typ b ze.
    ------------------------------------------------------------------------------------------------
    begin
      verify(172,(_tview<>tview_full) or (ptyp=nil) or not (ptyp^.stype in dts_u_base));
      result.init(_context,pentity_type(ptyp^.base.getutype));
      end getbase;



    ------------------------------------------------------------------------------------------------
    static getrange =
    -- Typ rozsahu.
    ------------------------------------------------------------------------------------------------
    begin
      verify(173,(_tview<>tview_full) or (ptyp=nil) or not (ptyp^.stype in dts_index));
      result.init(_context,pentity_type(ptyp^.srange.getutype));
      end getrange;



    ------------------------------------------------------------------------------------------------
    static getbits =
    -- Velikost v bitech.
    ------------------------------------------------------------------------------------------------
    begin
      verify(174,(_tview<>tview_full) or (ptyp=nil) or not (ptyp^.stype in dts_ordinal));
      result:=ptyp^.bits;
      end getbits;



    ------------------------------------------------------------------------------------------------
    static getintaritm =
    -- Celo‡¡seln  aritmetika.
    ------------------------------------------------------------------------------------------------
    begin
      verify(220,(_tview<>tview_full) or (ptyp=nil) or not (ptyp^.stype in dts_integer));
      result:=ptyp^.intaritm;
      end getintaritm;



    ------------------------------------------------------------------------------------------------
    static getpclass =
    -- T©¡da pointeru.
    ------------------------------------------------------------------------------------------------
    begin
      verify(170,(_tview<>tview_full) or (ptyp=nil) or (ptyp^.stype<>dt_pointer));
      result:=ptyp^.pclass;
      end getpclass;



    ------------------------------------------------------------------------------------------------
    static getpflags =
    -- Parametry pointeru.
    ------------------------------------------------------------------------------------------------
    begin
      verify(171,(_tview<>tview_full) or (ptyp=nil) or (ptyp^.stype<>dt_pointer));
      result:=ptyp^.pflags;
      end getpflags;



    ------------------------------------------------------------------------------------------------
    static getpbase =
    -- Kompatibilita b ze pointeru.
    ------------------------------------------------------------------------------------------------
    begin
      verify(208,(_tview<>tview_full) or (ptyp=nil) or (ptyp^.stype<>dt_pointer));
      result:=ptyp^.pbase;
      end getpbase;



    ------------------------------------------------------------------------------------------------
    static getpattrib =
    -- Dynamick‚ atributy ulo‘en‚ v pointeru.
    ------------------------------------------------------------------------------------------------
    begin
      verify(328,(_tview<>tview_full) or (ptyp=nil) or (ptyp^.stype<>dt_pointer));
      result:=ptyp^.pattrib;
      end getpattrib;



    ------------------------------------------------------------------------------------------------
    static getpaccess =
    -- Determina p©¡stupu b ze pointeru.
    ------------------------------------------------------------------------------------------------
    begin
      verify(547,(_tview<>tview_full) or (ptyp=nil) or (ptyp^.stype<>dt_pointer));
      result:=ptyp^.paccess;
      end getpaccess;



    ------------------------------------------------------------------------------------------------
    static getlval =
    -- Doln¡ mez (:first).
    ------------------------------------------------------------------------------------------------
    begin
      verify(178,(_tview<>tview_full) or (ptyp=nil) or not (ptyp^.stype in dts_ordinal));
      result:=ptyp^.lval;
      end getlval;



    ------------------------------------------------------------------------------------------------
    static gethval =
    -- Horn¡ mez (:last).
    ------------------------------------------------------------------------------------------------
    begin
      verify(178,(_tview<>tview_full) or (ptyp=nil) or not (ptyp^.stype in dts_ordinal));
      result:=ptyp^.hval;
      end gethval;



    ------------------------------------------------------------------------------------------------
    static getlength =
    -- D‚lka rozsahu (:length, :last-:first+1).
    ------------------------------------------------------------------------------------------------
    begin
      verify(271,(_tview<>tview_full) or (ptyp=nil) or not (ptyp^.stype in dts_ordinal));
      result:=uniint_length(ptyp^.lval,ptyp^.hval);
      end getlength;



    ------------------------------------------------------------------------------------------------
    static hassize =
    -- True, lze-li zjistit velikost typu.
    ------------------------------------------------------------------------------------------------
    begin
      result:=(ptyp<>nil) and (ptyp^.evaluated=etd_full);
      end hassize;



    ------------------------------------------------------------------------------------------------
    static getsize =
    -- Velikost typu.
    ------------------------------------------------------------------------------------------------
    begin
      verify(182,not hassize);
      result:=ptyp^.size;
      end getsize;



    ------------------------------------------------------------------------------------------------
    static setunchecked =
    -- Ozna‡¡ typ jako UNCHECKED.
    ------------------------------------------------------------------------------------------------
    begin
      _tview:=tview_unchecked;
      end setunchecked;

    end typeview;